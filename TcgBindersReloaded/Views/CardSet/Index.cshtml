@model IEnumerable<TcgBindersReloaded.Entities.CardSet>

@{
ViewData["Title"] = "Card Sets";
}

<h1 class="text-center text-3xl font-bold mb-6">Card Sets</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
            <img src="@item.image" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title fw-bold">@item.Name</h5>
                <p class="card-text text-muted">@item.Description</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Tag:</strong> @item.Tag</li>
                    <li class="list-group-item"><strong>No. of Cards:</strong> @item.NoOfCards</li>
                    <li class="list-group-item"><strong>Game Tag:</strong> @item.GameTag</li>
                </ul>
                <div class="mt-3 text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    </div>
    }
</div>
