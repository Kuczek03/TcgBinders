@model IEnumerable<TcgBindersReloaded.Entities.UserLogs>

@{
ViewData["Title"] = "User Activity Logs";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-3xl font-bold mb-6">ðŸ“œ User Activity Logs</h1>

<div class="table-responsive">
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by user or message...">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>User</th>
            <th>Message</th>
            <th>Action Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">#@item.Id</td>
                <td>
                    @item.UserId
                </td>
                <td>
                    <span class="text-muted">@item.Message</span>
                </td>
                <td>
                    <span class="text-success">@item.ActionDate.ToString("yyyy-MM-dd HH:mm:ss")</span>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
