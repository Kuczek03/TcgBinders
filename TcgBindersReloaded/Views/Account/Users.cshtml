@model IEnumerable<TcgBindersReloaded.Entities.User>

@{
ViewData["Title"] = "User Accounts";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-3xl font-bold mb-6">User Accounts</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Creation Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="fw-bold">#@item.Id</td>
            <td>
                @item.Username
            </td>
            <td>
                @item.Email
            </td>
            <td>
                <span class="text-muted">@item.Role</span>
            </td>
            <td>
                <span class="text-success">@item.CreationDate.ToString("yyyy-MM-dd")</span>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
