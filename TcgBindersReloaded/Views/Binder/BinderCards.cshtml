@model IEnumerable<TcgBindersReloaded.Entities.BinderCards>

@{
ViewData["Title"] = "Binder Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Binders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BinderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardId)
        </th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BinderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardId)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>