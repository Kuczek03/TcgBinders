@model IEnumerable<TcgBindersReloaded.Entities.CardGame>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-3xl font-bold mb-6">Card Game</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Card Game</a>
    </p>
}
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card shadow-sm">
            <img src="@item.Image" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text"><strong>Tag:</strong> @item.Tag</p>
                <p class="card-text">@item.Description</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                }
            </div>
        </div>
    </div>
    }
</div>
